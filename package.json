{
  "name": "typescript-node-native-unit-tests",
  "version": "1.0.0",
  "description": "Repository with examples of unit tests using NodeJS native features",
  "main": "index.js",
  "scripts": {
    "lint:fix": "prettier --config .prettierrc 'src/**/*.ts' 'tests/**/*.ts' --write --check",
    "test:unit": "node -r ts-node/register -r tsconfig-paths/register --test ./tests/unit/*.test.ts",
    "test:coverage": "node -r ts-node/register -r tsconfig-paths/register --test --experimental-test-coverage ./tests/unit/*.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "20.14.9",
    "prettier": "3.3.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.3"
  }
}
