{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "baseUrl": ".",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonJs",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "pretty": true,
        "rootDir": "./src",
        "sourceMap": false,
        "target": "ES2022",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        ".gitignore",
    ],
    "lib": [
        "ES2023"
    ]
}